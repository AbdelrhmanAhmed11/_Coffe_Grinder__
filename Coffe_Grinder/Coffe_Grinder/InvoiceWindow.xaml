 <Window x:Class="Coffe_Grinder.InvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Coffe_Grinder"
        Title="فاتورة" Height="500" Width="400"
        Icon="Coffe_Grinder.ico"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <!-- Add the converter -->
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

        <!-- Styles -->
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontFamily" Value="Traditional Arabic"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeight" Value="25"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Traditional Arabic"/>
            <Setter Property="FlowDirection" Value="RightToLeft"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#5D4037"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Traditional Arabic"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#6D4C41"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontFamily" Value="Traditional Arabic"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5D4037"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- RowDefinitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="مطحنة القهوة" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="فاتورة" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>
            <TextBlock x:Name="InvoiceNumber" FontSize="14" HorizontalAlignment="Center"/>
            <TextBlock x:Name="InvoiceDate" FontSize="12" HorizontalAlignment="Center"/>
            <TextBlock x:Name="CustomerName" FontSize="12" HorizontalAlignment="Center"/>
            <TextBlock x:Name="CustomerPhone" FontSize="12" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Order Details -->
        <DataGrid Grid.Row="1" x:Name="InvoiceItems" Margin="20,0"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="القهوة" Binding="{Binding CoffeeName}" Width="0.5*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Traditional Arabic"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="النوع" Binding="{Binding CoffeeType}" Width="0.5*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Traditional Arabic"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="الكمية (كجم)" Binding="{Binding Quantity, StringFormat={}{0:F3}}" Width="1*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Traditional Arabic"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="السعر" Binding="{Binding UnitPrice, StringFormat=C}" Width="1*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Traditional Arabic"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="المجموع الفرعي" Binding="{Binding Subtotal, StringFormat=C}" Width="1*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Traditional Arabic"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Margin="20,10">
            <TextBlock x:Name="TotalAmount" FontSize="14" FontWeight="Bold" HorizontalAlignment="Right"/>
            <Button Content="طباعة" Click="Print_Click" HorizontalAlignment="Center" Margin="0,20"/>
            <StackPanel Margin="0,10,0,0"
                        Visibility="{Binding ElementName=OrderNotes, Path=Text, Converter={StaticResource StringToVisibilityConverter}}">
                <TextBlock Text="ملاحظات الطلب:" FontWeight="Bold"/>
                <Border BorderBrush="#8D6E63" BorderThickness="1" Padding="5" Background="White">
                    <TextBlock x:Name="OrderNotes" TextWrapping="Wrap" FontFamily="Traditional Arabic"/>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
