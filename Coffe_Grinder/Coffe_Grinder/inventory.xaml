<Page x:Class="Coffe_Grinder.inventory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Coffe_Grinder"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="900"
      Title="إدارة مخزون القهوة"
      FlowDirection="RightToLeft">

    <Page.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6D4C41"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Traditional Arabic"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5D4037"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Drop Shadow Effect -->
        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="inventory2.jpg" Stretch="UniformToFill" Opacity="0.8"/>
        </Grid.Background>

        <!-- Main content container with shadow effect -->
        <Border Margin="20" Background="#FFF8E1" CornerRadius="10"
                BorderBrush="#BCAAA4" BorderThickness="1"
                Effect="{StaticResource DropShadowEffect}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Label Grid.Row="0" Content="إدارة مخزون القهوة" 
                       FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"
                       Margin="0,10,0,5" Foreground="#5D4037" FontFamily="Traditional Arabic"/>

                <!-- Edit by ID and Add New Coffee Type Section (side by side) -->
                <Grid Grid.Row="1" Margin="10,0,10,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Section -->
                    <Border Grid.Column="0" Margin="0,0,5,0" Background="#D7CCC8" CornerRadius="8"
                            BorderBrush="#BCAAA4" BorderThickness="1" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Content="البحث:" FontSize="22" 
                                   VerticalAlignment="Center" Foreground="#5D4037" 
                                   FontFamily="Traditional Arabic" Margin="0,0,5,0"/>

                            <ComboBox Grid.Column="1" Name="SearchBox" Height="35" FontSize="16"
                                    Background="#FFF8E1" BorderBrush="#8D6E63" BorderThickness="1"
                                    VerticalContentAlignment="Center" Padding="8,0" Margin="5,0"
                                    IsEditable="True" IsTextSearchEnabled="False" 
                                    StaysOpenOnEdit="True" 
                                    IsTabStop="True"
                                    IsSynchronizedWithCurrentItem="False"
                                    TextSearch.TextPath="DisplayText">
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel />
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>

                            <Button Grid.Column="2" Content="بحث" Click="FindById" Width="90" Height="35" 
                                    Margin="5,0,0,0" Style="{StaticResource ModernButtonStyle}" FontSize="16"/>
                        </Grid>
                    </Border>

                    <!-- Add New Coffee Type Section -->
                    <Border Grid.Column="1" Margin="5,0,0,0" Background="#D7CCC8" CornerRadius="8"
                            BorderBrush="#BCAAA4" BorderThickness="1" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Content="نوع قهوة جديد:" FontSize="22" 
                                   VerticalAlignment="Center" Foreground="#5D4037" 
                                   FontFamily="Traditional Arabic" Margin="0,0,5,0"/>

                            <TextBox Grid.Column="1" Name="NewCoffeeTypeName" Height="35" FontSize="16"
                                     Background="#FFF8E1" BorderBrush="#8D6E63" BorderThickness="1"
                                     VerticalContentAlignment="Center" Padding="8,0" Margin="5,0"/>

                            <Button Grid.Column="2" Content="إضافة نوع" Click="AddNewCoffeeType" Width="90" Height="35" 
                                    Margin="5,0,0,0" Style="{StaticResource ModernButtonStyle}" FontSize="16"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Main content area -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Input form with card-like appearance -->
                    <Border Grid.Column="0" Width="300" Margin="10" 
                            Background="#FFF8E1" CornerRadius="8"
                            BorderBrush="#BCAAA4" BorderThickness="1"
                            Padding="10">
                        <StackPanel>
                            <Label Content="تفاصيل المخزون" FontSize="18" FontWeight="Bold"
                                   Margin="0,0,0,8" Foreground="#5D4037" FontFamily="Traditional Arabic"/>

                            <Label Content="رقم القهوة:" FontSize="14" Foreground="#5D4037" FontFamily="Traditional Arabic" Margin="0,0,0,2"/>
                            <TextBox Name="Id" Height="25" Margin="0,0,0,8" FontSize="14" IsReadOnly="True"
                                     Background="White" BorderBrush="#8D6E63" BorderThickness="1" VerticalContentAlignment="Center"/>

                            <Label Content="اسم القهوة:" FontSize="14" Foreground="#5D4037" FontFamily="Traditional Arabic" Margin="0,0,0,2"/>
                            <TextBox Name="CoffeeName" Height="25" Margin="0,0,0,8" FontSize="14"
                                     Background="White" BorderBrush="#8D6E63" BorderThickness="1" VerticalContentAlignment="Center"/>

                            <Label Content="نوع القهوة:" FontSize="14" Foreground="#5D4037" FontFamily="Traditional Arabic" Margin="0,0,0,2"/>
                            <ComboBox Name="CoffeeType" Height="25" Margin="0,0,0,5" FontSize="14"
                                      DisplayMemberPath="TypeName"
                                      Background="White" BorderBrush="#8D6E63" BorderThickness="1" VerticalContentAlignment="Center"/>
                            <Button Name="DeleteCoffeeType" Content="حذف نوع القهوة" Click="DeleteCoffeeType_Click" 
                                    Width="120" Margin="0,5,0,8" Style="{StaticResource DeleteButtonStyle}"/>

                            <Label Content="الوصف:" FontSize="14" Foreground="#5D4037" FontFamily="Traditional Arabic" Margin="0,0,0,2"/>
                            <TextBox Name="Description" Height="50" Margin="0,0,0,8" FontSize="14"
                                     AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                                     Background="White" BorderBrush="#8D6E63" BorderThickness="1"/>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <Label Content="الكمية (كجم):" FontSize="14" Foreground="#5D4037" FontFamily="Traditional Arabic" Margin="0,0,0,2"/>
                                    <TextBox Name="Amount" Height="25" FontSize="14" Margin="0,0,0,0"
                                             Background="White" BorderBrush="#8D6E63" BorderThickness="1" VerticalContentAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <Label Content="السعر/كجم:" FontSize="14" Foreground="#5D4037" FontFamily="Traditional Arabic" Margin="0,0,0,2"/>
                                    <TextBox Name="PricePerKg" Height="25" FontSize="14" Margin="0,0,0,0"
                                             Background="White" BorderBrush="#8D6E63" BorderThickness="1" VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- DataGrid with improved styling -->
                    <Border Grid.Column="1" Margin="10" CornerRadius="8"
                            Background="#FFF8E1" BorderBrush="#BCAAA4" BorderThickness="1">
                        <DataGrid x:Name="CoffeeDataGrid" AutoGenerateColumns="False" 
                                 HeadersVisibility="Column" IsReadOnly="True"
                                 SelectionMode="Single" SelectionUnit="FullRow"
                                 FontSize="14" RowHeight="30" Background="White"
                                 BorderThickness="0" Foreground="#5D4037"
                                 FontFamily="Traditional Arabic">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#5D4037"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="FontFamily" Value="Traditional Arabic"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#D7CCC8"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="الرقم" Binding="{Binding CoffeeID}" Width="0.5*"/>
                                <DataGridTextColumn Header="اسم القهوة" Binding="{Binding CoffeeName}" Width="1.5*"/>
                                <DataGridTextColumn Header="النوع" Binding="{Binding CoffeeType.TypeName}" Width="1*"/>
                                <DataGridTextColumn Header="الوصف" Binding="{Binding Description}" Width="2*"/>
                                <DataGridTextColumn Header="الكمية (كجم)" Binding="{Binding QuantityInStock, StringFormat={}{0:F3} كجم}" Width="0.8*"/>
                                <DataGridTextColumn Header="السعر/كجم" Binding="{Binding PricePerKg, StringFormat={}{0:F2} جنيه}" Width="1*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Margin" Value="0,0,10,0"/>
                                            <Setter Property="FontFamily" Value="Traditional Arabic"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>

                <!-- Action buttons with improved styling -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15">
                    <Button Content="اعادة التحميل" Click="refresh" Width="230" Height="45" Margin="5" 
                            Style="{StaticResource ModernButtonStyle}"/>
                    <Button Content="إضافة" Click="add" Width="230" Height="45" Margin="5"
                            Style="{StaticResource ModernButtonStyle}"/>
                    <Button Content="تعديل" Click="update" Width="230" Height="45" Margin="5"
                            Style="{StaticResource ModernButtonStyle}"/>
                    <Button Content="حذف" Click="delete" Width="230" Height="45" Margin="5"
                            Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>