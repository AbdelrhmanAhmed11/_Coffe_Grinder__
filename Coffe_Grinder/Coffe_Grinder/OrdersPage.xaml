<Page x:Class="Coffe_Grinder.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Coffe_Grinder"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="900"
      Title="إدارة الطلبات"
      FlowDirection="RightToLeft">

    <Page.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6D4C41"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5D4037"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Drop Shadow Effect -->
        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>

        <!-- Notes TextBox Style -->
        <Style x:Key="NotesTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#8D6E63"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Height" Value="80"/>
        </Style>

        <!-- StatusToVisibilityConverter -->
        <local:StatusToVisibilityConverter x:Key="StatusToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="orders.jpg" Stretch="UniformToFill" Opacity="0.8"/>
        </Grid.Background>

        <!-- Main content container -->
        <Border Margin="20" Background="#FFF8E1" CornerRadius="10"
                BorderBrush="#BCAAA4" BorderThickness="1"
                Effect="{StaticResource DropShadowEffect}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Label Grid.Row="0" Content="إدارة الطلبات" 
                       FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"
                       Margin="0,10" Foreground="#5D4037"/>

                <!-- Orders DataGrid -->
                <Border Grid.Row="1" Margin="10" CornerRadius="8"
                        Background="White" BorderBrush="#8D6E63" BorderThickness="1">
                    <DataGrid x:Name="OrdersDataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" 
                              HeadersVisibility="Column" IsReadOnly="True"
                              SelectionMode="Single" SelectionUnit="FullRow"
                              CanUserAddRows="False" CanUserDeleteRows="False">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#5D4037"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10,5"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#D7CCC8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="رقم الطلب" Binding="{Binding OrderID}" Width="0.5*"/>
                            <DataGridTextColumn Header="التاريخ" Binding="{Binding OrderDate, StringFormat={}{0:dd/MM/yyyy}}" Width="1*"/>
                            <DataGridTextColumn Header="العميل" Binding="{Binding CustomerName}" Width="1.5*"/>
                            <DataGridTemplateColumn Header="الحالة" Width="1.5*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding OrderStatus.StatusName}" Margin="5,0"/>
                                            <Button Content="إلغاء" Style="{StaticResource CancelButtonStyle}"
                                                    Click="CancelOrder_Click"
                                                    Visibility="{Binding StatusID, Converter={StaticResource StatusToVisibilityConverter}, ConverterParameter=2}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="الإجمالي" Binding="{Binding TotalPrice, StringFormat={}{0:F2} جنيه}" Width="1*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="0,0,10,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Order Details Section -->
                <Border Grid.Row="2" Margin="10" CornerRadius="8"
                        Background="#D7CCC8" BorderBrush="#BCAAA4" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="تفاصيل الطلب" FontSize="16" FontWeight="Bold"
                               Margin="10" HorizontalAlignment="Center" Foreground="#5D4037"/>

                        <DataGrid Grid.Row="1" x:Name="OrderDetailsDataGrid" Margin="10" AutoGenerateColumns="False"
                                  HeadersVisibility="Column" IsReadOnly="True" FontSize="14" RowHeight="30"
                                  Background="White" BorderThickness="0" Foreground="#5D4037">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#5D4037"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#D7CCC8"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="القهوة" Binding="{Binding CoffeeInventory.CoffeeName}" Width="2*"/>
                                <DataGridTextColumn Header="الكمية (كجم)" Binding="{Binding Quantity, StringFormat={}{0:F3} كجم}" Width="1*"/>
                                <DataGridTextColumn Header="سعر الوحدة" Binding="{Binding UnitPrice, StringFormat={}{0:F2} جنيه}" Width="1*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Margin" Value="0,0,10,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="المجموع الكلي" Binding="{Binding Subtotal, StringFormat={}{0:F2} جنيه}" Width="1*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Margin" Value="0,0,10,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Notes Section -->
                        <StackPanel Grid.Row="2" Margin="10,5,10,10">
                            <Label Content="ملاحظات الطلب:" FontSize="14" FontWeight="Bold" Foreground="#5D4037"/>
                            <TextBox x:Name="OrderNotesTextBox" Style="{StaticResource NotesTextBoxStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Action buttons -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15">
                    <Button Content="تحديث" Click="RefreshOrders" Width="120" Height="40" Margin="5" 
                            Style="{StaticResource ModernButtonStyle}"/>
                    <Button Content="رجوع" Click="GoBack_Click" Width="120" Height="40" Margin="5" 
                            Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>