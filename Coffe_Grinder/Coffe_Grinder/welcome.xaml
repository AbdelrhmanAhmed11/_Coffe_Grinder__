<Page x:Class="Coffe_Grinder.welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Coffe_Grinder"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="مرحبا بكم في مطحنة القهوة"
      FlowDirection="RightToLeft">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="welcomebackground.jpg" Stretch="UniformToFill" Opacity="0.9"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Overlay to improve text readability -->
        <Rectangle Fill="#801A1A1A" Grid.Column="0" Grid.RowSpan="3"/>

        <!-- App Title -->
        <TextBlock Grid.Column="0" Grid.Row="0" 
                   Text="مطحنة القهوة"
                   FontSize="28"
                   Foreground="BurlyWood"
                   Margin="0,40,40,0"
                   FontWeight="Bold"
                   FontFamily="Traditional Arabic"
                   HorizontalAlignment="Right"/>

        <!-- Welcome Message -->
        <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,40,0">
            <TextBlock Text="مرحبًا بعودتك"
                       FontSize="55"
                       Foreground="White"
                       FontWeight="Bold"
                       FontFamily="Traditional Arabic"
                       HorizontalAlignment="Right"/>

            <TextBlock Text="نتمنى لك تجربة قهوة رائعة"
                       FontSize="30"
                       Foreground="BurlyWood"
                       Margin="0,10,0,0"
                       FontFamily="Traditional Arabic"
                       HorizontalAlignment="Right"/>

            <!-- Decorative elements -->
            <Path Data="M0,0 L100,0"
                  Stroke="BurlyWood"
                  StrokeThickness="2"
                  Margin="0,20,0,20"
                  Stretch="UniformToFill"/>

            <TextBlock Text="يرجى الضغط علي بدا الاستعمال للمتابعة"
                       FontSize="25"
                       Foreground="White"
                       Margin="0,20,0,0"
                       FontFamily="Traditional Arabic"
                       HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Column="1" Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Width="300">

            <!-- start Button -->
            <Button Width="250" Height="70" Margin="0,0,0,25"
                    Background="#FF6F4E37" Foreground="White"
                    FontSize="24" FontWeight="Bold"
                    BorderBrush="#FF5A3E2D" BorderThickness="1"
                    Click="Button_Click1"
                    FontFamily="Traditional Arabic">
                بدا الاستعمال
            </Button>

        </StackPanel>

        <!-- Footer -->
        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"
                   Text="© 2025 مطحنة القهوة. جميع الحقوق محفوظة."
                   Foreground="BurlyWood"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   FontFamily="Traditional Arabic"/>
    </Grid>
</Page>